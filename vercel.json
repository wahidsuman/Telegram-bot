{
  "version": 2,
  "functions": {
    "api/webhook.py": {
      "runtime": "python3.9"
    },
    "api/send-mcq.py": {
      "runtime": "python3.9"
    }
  },
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "/api/webhook.py"
    },
    {
      "src": "/api/send-mcq",
      "dest": "/api/send-mcq.py"
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "TELEGRAM_CHAT_ID": "@telegram_chat_id",
    "ADMIN_CHAT_ID": "@admin_chat_id",
    "CRON_SECRET": "@cron_secret"
  },
  "crons": [
    {
      "path": "/api/send-mcq",
      "schedule": "0 * * * *"
    }
  ],
  "build": {
    "env": {
      "PYTHONPATH": "$PYTHONPATH:."
    }
  }
}
